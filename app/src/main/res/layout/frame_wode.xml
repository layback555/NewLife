<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/pink1"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/youxiang"
        android:layout_width="57dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@mipmap/touxiang"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_wode"
        android:layout_width="284dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text=""
        android:textSize="15sp"
        android:gravity="center|bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/youxiang"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="8dp" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="441dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_wode">

        <Button
            android:id="@+id/btn_myaccount"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="6dp"
            android:background="@color/color4Pink"
            android:gravity="center|left"
            android:onClick="openAccount"
            android:text="   我的账号"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_myrecord"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/color4Pink"
            android:gravity="center|left"
            android:onClick="openRecord"
            android:text="   我的记录"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_myfaxian"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/color4Pink"
            android:gravity="center|left"
            android:onClick="openQue"
            android:text="   我的发现"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_securty"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/color4Pink"
            android:gravity="center|left"
            android:onClick="openPass"
            android:text="   安全设置"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_opengeqian"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@color/color4Pink"
            android:gravity="center|left"
            android:onClick="openGeqian"
            android:text="   设置个性签名"
            android:textSize="15sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>